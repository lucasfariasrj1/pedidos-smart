Options -Indexes
DirectoryIndex index.php
<FilesMatch "\.(inc|log|ini|config)$">
    Order deny,allow
    Deny from all
</FilesMatch>

<IfModule mod_rewrite.c>
    RewriteEngine On

    # --- INÍCIO DOS DIRECIONAMENTOS ESPECÍFICOS ---
    RewriteRule ^home/?$ index.php [NC,L]
    RewriteRule ^historicoPedidos/?$ historyPedidos.php [NC,L]
    RewriteRule ^pedidos/?$ pedidos.php [NC,L]

    RewriteRule ^users/?$ usuarios.php [NC,L]
    RewriteRule ^fornecedores/?$ fornecedores.php [NC,L]
    RewriteRule ^configuracoes/?$ settings.php [NC,L]
    RewriteRule ^logs/?$ logs.php [NC,L]

    RewriteRule ^auth/login/?$ login.php [NC,L]

    # Fim dos direcionamentos específicos

    # Redirecionamento para arquivos PHP sem a extensão
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^([^\.]+)$ $1.php [NC,L]

</IfModule>